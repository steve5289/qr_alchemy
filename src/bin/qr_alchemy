#!/usr/bin/env python3

import sys
import getopt
import qr_alchemy.process as qr_process
import qr_alchemy.plugins as qr_plugins
import qr_alchemy.gui_process as qr_gui_process
import qr_alchemy.gui_main as qr_gui_main

def main():
    optlist, args = getopt.getopt(sys.argv[1:], "hVf:c:p:")
    configfile="%CONFDIR%/qr_alchemy.conf"
    sys_plugin_dir="%SHAREDIR%/"
    file=''

    for opt, arg in  optlist:
        if opt == '-h':
            help()
        elif opt == '-f':
            file=arg
        elif opt == '-c':
            configfile=arg
        elif opt == '-p':
            sys_plugin_dir=arg
        elif opt == '-V':
            print(sys.argv[0], 'version: ', '%VERSION%')
            sys.exit(0)
        else:
            help()
    print('test2: ', sys_plugin_dir)
    qr_plugins.set_sys_plugin_dir(sys_plugin_dir)
    qr_process.configfile(configfile)

    if file:
        qr_code = qr_process.qr_image_handler(file)
        if qr_code:
            qr_gui_process.qr_gui_handle_code(qr_code)
    elif len(args) >= 1:
        qr_gui_process.qr_gui_handle_code(args[0])
    else:
        qr_gui_main.qr_gui_main()


main()
