#!/usr/bin/env python3

import sys
import getopt
import qr_alchemy.process as qr_process

def main():
    optlist, args = getopt.getopt(sys.argv[1:], "hf:")
    

    for opt, arg in  optlist:
        if opt == '-h':
            help()
        elif opt == '-f':
            qr_process.qr_image_handler(arg)
        else:
            help()
    if len(args) >= 1:
        qr_process.qr_code_handler(args[0])


main()
